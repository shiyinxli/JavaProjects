<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.calculator.HelloController">
    <children>
        <VBox>
            <Label fx:id="resultLabel"/>
            <GridPane>
                <Button fx:id="7" text="7" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                <Button fx:id="8" text="8" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                <Button fx:id="9" text="9" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                <Button fx:id="4" text="4" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                <Button fx:id="5" text="5" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                <Button fx:id="6" text="6" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                <Button fx:id="1" text="1" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                <Button fx:id="2" text="2" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                <Button fx:id="3" text="3" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                <Button fx:id="0" text="0" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                <Button fx:id="dot" text="." GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                <Button fx:id="=" text="=" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
                <Button fx:id="+" text="+" GridPane.columnIndex="3" GridPane.rowIndex="0"/>
                <Button fx:id="-" text="-" GridPane.columnIndex="3" GridPane.rowIndex="1"/>
                <Button fx:id="*" text="*" GridPane.columnIndex="3" GridPane.rowIndex="2"/>
                <Button fx:id="/" text="/" GridPane.columnIndex="3" GridPane.rowIndex="3"/>
            </GridPane>
        </VBox>
    </children>

</AnchorPane>
